@{
    ViewData["Title"] = "首頁輪播 | GhostToys魔型仔";
}
<div class="page-inner">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">首頁輪播</h4>
            </div>
            <div class="card-body">
                <!-- 篩選搜尋區 -->
                <div class="card shadow-sm mx-3 pb-3">
                    <div class="card-header bg-light py-2 d-flex justify-content-between align-items-center">
                        <h6 class="m-0 font-weight-bold">
                            <i class="fas fa-filter mr-1"></i> 篩選搜尋
                        </h6>
                        <button class="btn btn-light btn-sm" id="resetFilterBtn">
                            <i class="fas fa-redo"></i> 重設
                        </button>
                    </div>
                    <div class="card-body pb-0">
                        <div class="row">
                            <div class="col-md-3 col-sm-12">
                                <div class="form-group">
                                    <label>標題搜尋</label>
                                    <input type="text" class="form-control" id="title-filter"
                                           placeholder="輸入輪播圖標題">
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-12">
                                <div class="form-group">
                                    <label>狀態篩選</label>
                                    <select class="form-control" id="status-filter">
                                        <option value="">全部狀態</option>
                                        <option value="active">已啟用</option>
                                        <option value="inactive">未啟用</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-12">
                                <div class="form-group">
                                    <label>開始日期</label>
                                    <input type="date" class="form-control" id="start-date-filter">
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-12">
                                <div class="form-group">
                                    <label>結束日期</label>
                                    <input type="date" class="form-control" id="end-date-filter">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- 操作按鈕 -->
                <div class="d-flex">
                    <div class="card-body">
                        <button class="btn btn-secondary btn-round mb-3 me-2" data-bs-toggle="modal"
                                data-bs-target="#addCarouselModal">
                            <span class="btn-label"><i class="fa fa-plus"></i></span>新增輪播圖
                        </button>
                        <button class="btn btn-primary btn-round mb-3 me-2" id="bulkDeleteBtn">
                            <span class="btn-label"><i class="far fa-trash-alt"></i></span>批量刪除
                        </button>
                        <button class="btn btn-success btn-round mb-3 me-2" id="saveChangesBtn">
                            <span class="btn-label"><i class="far fa-save"></i></span>儲存排序
                        </button>
                        <button class="btn btn-info btn-round mb-3 me-2" id="previewCarouselBtn">
                            <span class="btn-label"><i class="fas fa-eye"></i></span>預覽輪播
                        </button>
                    </div>
                </div>

                <!-- 輪播圖列表表格 -->
                <div class="table-responsive">
                    <table id="carousel-datatables" class="display table table-striped table-hover">
                        <thead>
                            <tr>
                                <th style="width: 3%;">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox"
                                               id="select-all">
                                    </div>
                                </th>
                                <th>編號</th>
                                <th>輪播圖片</th>
                                <th>標題</th>
                                <th>副標題</th>
                                <th>連結</th>
                                <th>順序</th>
                                <th>狀態</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.CarouselList)
                            {
                                <tr>
                                    <td>
                                        <div class="form-check">
                                            <input class="form-check-input marquee-row-check"
                                                   type="checkbox" value="@item.Id">
                                        </div>
                                    </td>
                                    <td>@item.Id</td>
                                    <td>@item.Image</td>
                                    <td>@item.Title</td>
                                    <td>@item.SubTitle</td>
                                    <td>@(string.IsNullOrEmpty(item.Link) ? "-" : item.Link)</td>
                                    <td>@item.SortOrder</td>
                                    <td>
                                        @if (item.IsActive == true)
                                        {
                                            <span class="badge badge-success">啟用</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-count">未啟用</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="#" class="edit-category" data-id="@item.Id">
                                            <i class="fa fa-edit" title="編輯"></i>
                                        </a>
                                        &nbsp;
                                        <a href="#" class="delete-category" data-id="@item.Id">
                                            <i class="fa fa-times text-danger" title="刪除"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
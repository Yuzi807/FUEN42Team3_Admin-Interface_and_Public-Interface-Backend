@{
    ViewData["Title"] = "修改密碼 | GhostToys魔型仔";
    Layout = "_Layout";
}

<div class="page-inner">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">修改密碼</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mx-auto">
                        <form id="changePasswordForm" class="needs-validation" novalidate>
                            <input type="hidden" id="userId" value="@ViewBag.UserId">

                            <div class="mb-3">
                                <label for="currentPassword" class="form-label">目前密碼</label>
                                <input type="password" class="form-control" id="currentPassword" required>
                                <div class="invalid-feedback">請輸入目前密碼</div>
                            </div>

                            <div class="mb-3">
                                <label for="newPassword" class="form-label">新密碼</label>
                                <input type="password" class="form-control" id="newPassword" required minlength="6">
                                <div class="invalid-feedback">新密碼至少需要6個字符</div>
                            </div>

                            <div class="mb-3">
                                <label for="confirmPassword" class="form-label">確認新密碼</label>
                                <input type="password" class="form-control" id="confirmPassword" required>
                                <div class="invalid-feedback">請確認新密碼</div>
                            </div>

                            <div class="d-grid gap-2 mt-4">
                                <button type="submit" class="btn btn-primary">更新密碼</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Sweet Alert -->
    <script src="~/assets/js/plugin/sweetalert/sweetalert.min.js"></script>

    <script>
        $(document).ready(function () {
            const passwordForm = document.getElementById('changePasswordForm');
            
            // 密碼確認驗證
            $('#confirmPassword').on('input', function () {
                const newPassword = $('#newPassword').val();
                const confirmPassword = $(this).val();
                
                if (newPassword !== confirmPassword) {
                    this.setCustomValidity('密碼不一致');
                } else {
                    this.setCustomValidity('');
                }
            });

            $('#newPassword').on('input', function () {
                const newPassword = $(this).val();
                const confirmPassword = $('#confirmPassword').val();
                
                if (confirmPassword && (newPassword !== confirmPassword)) {
                    $('#confirmPassword')[0].setCustomValidity('密碼不一致');
                } else if (confirmPassword) {
                    $('#confirmPassword')[0].setCustomValidity('');
                }
            });

            // 表單提交
            passwordForm.addEventListener('submit', function (e) {
                e.preventDefault();
                
                if (!this.checkValidity()) {
                    e.stopPropagation();
                    this.classList.add('was-validated');
                    return;
                }
                
                // 收集表單數據
                const passwordData = {
                    userId: parseInt($('#userId').val()),
                    currentPassword: $('#currentPassword').val(),
                    newPassword: $('#newPassword').val(),
                    confirmPassword: $('#confirmPassword').val()
                };
                
                // 發送 API 請求
                $.ajax({
                    url: '/api/UsersApi/ChangePassword',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(passwordData),
                    success: function (response) {
                        if (response.success) {
                            swal({
                                title: '成功',
                                text: response.message,
                                icon: 'success',
                                buttons: {
                                    confirm: {
                                        text: "確定",
                                        value: true
                                    }
                                },
                            }).then(() => {
                                // 如果需要登出，則重定向到登出頁面
                                if (response.requireLogout) {
                                    window.location.href = '/Auth/Logout';
                                }
                            });
                        } else {
                            swal('錯誤', response.message, 'error');
                        }
                    },
                    error: function (xhr) {
                        let errorMsg = '更新密碼失敗，請稍後再試';
                        if (xhr.responseJSON) {
                            errorMsg = xhr.responseJSON.message || xhr.responseText;
                        }
                        swal('錯誤', errorMsg, 'error');
                    }
                });
            });
        });
    </script>
}
@{
    ViewData["Title"] = "個人資料 | GhostToys魔型仔";
    Layout = "_Layout";
}

<div class="page-inner">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">個人資料</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mx-auto">
                        <div class="mb-4">
                            <h5 class="text-primary mb-3">基本資料</h5>
                            <div class="mb-3 row">
                                <label class="col-sm-3 col-form-label">使用者名稱：</label>
                                <div class="col-sm-9">
                                    <p class="form-control-plaintext">@ViewBag.UserName</p>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label class="col-sm-3 col-form-label">帳號：</label>
                                <div class="col-sm-9">
                                    <p class="form-control-plaintext">@ViewBag.Account</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <h5 class="text-primary mb-3">帳號安全</h5>
                            <div class="d-flex justify-content-between align-items-center">
                                <span>密碼</span>
                                <a href="@Url.Action("ChangePassword", "Profile")" class="btn btn-sm btn-primary">
                                    <i class="fas fa-key mr-1"></i> 修改密碼
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
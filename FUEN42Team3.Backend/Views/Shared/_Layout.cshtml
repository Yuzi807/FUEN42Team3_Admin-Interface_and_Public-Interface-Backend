@using System.Security.Claims
@{
    // 獲取當前登入用戶的帳號
    var accountName = User.Identity?.IsAuthenticated == true ? User.Identity.Name : "未登入";

    // 從Claims中取得UserName作為顯示名稱
    var displayName = User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.GivenName)?.Value ??
    accountName;
}
<!DOCTYPE html>
<html lang="zh-tw">

<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta content="width=device-width, initial-scale=1.0, shrink-to-fit=no" name="viewport" />
    <link rel="icon" href="~/assets/img/FUEN42/GhostToys_Icon_Cute.ico" type="image/x-icon" />
    <!-- Font Awesome CDN as fallback 修復icon因版本失效問題-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <!-- 字型和icon -->
    <script src="~/assets/js/plugin/webfont/webfont.min.js"></script>
    <!-- CSS樣式路徑 -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/css/plugins.min.css" />
    <link rel="stylesheet" href="~/assets/css/kaiadmin.min.css" />
    @RenderSection("Styles", required: false)

</head>

<body>

@model FUEN42Team3.Backend.Models.EfModels.Announcement

@{
    ViewData["Title"] = "公告詳細內容 | GhostToys魔型仔";
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="p-4 bg-light">

    <div class="container">
        <div class="card shadow">
            <div class="card-body">
                <div class="mb-3">
                    <h3 class="card-title">@Model.Title</h3>
                </div>

                <div class="mb-2 text-muted">
                    <div>發布者：<strong>@Model.Supervisor.Account</strong></div>
                    <div>發布時間：<strong>@Model.PostTime.ToString("yyyy/MM/dd HH:mm")</strong></div>
                </div>

                @if (Model.LastEditTime.HasValue)
                {
                    <div class="mb-2 text-muted">
                        <div>最後修改人員：<strong>@(Model.LastEditByNavigation?.Account ?? "-")</strong></div>
                        <div>最後修改時間：<strong>@Model.LastEditTime?.ToString("yyyy/MM/dd HH:mm")</strong></div>
                    </div>
                }

                <div class="mb-3">
                    狀態：
                    <span class="badge bg-@(Model.Status?.Name == "公開" ? "success" : Model.Status?.Name == "草稿" ? "warning" : "secondary")">
                        @Model.Status?.Name
                    </span>
                </div>

                <div class="border rounded p-3 bg-white">
                    @Html.Raw(Model.AnnouncementBody)
                </div>
            </div>
        </div>
    </div>

</body>
</html>

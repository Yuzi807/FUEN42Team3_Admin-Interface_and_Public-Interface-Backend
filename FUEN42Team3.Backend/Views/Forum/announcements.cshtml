@model FUEN42Team3.Backend.Models.ViewModels.QueryViewModel<AnnouncementsViewModel>
@using FUEN42Team3.Backend.Models.ViewModels
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "公告管理 | GhostToys魔型仔";
    Layout = "_Layout";
}

<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">公告管理</h4>
    </div>
    

    <div class="page-category">
        <div class="col-md-12">

            <!-- 🔍 搜尋與顯示筆數表單 -->
            <form method="get" class="mb-3 d-flex flex-wrap gap-2 align-items-center">
                <label class="me-2">顯示筆數：</label>
                <select name="pageSize" class="form-select form-select-sm" style="width:auto;" onchange="this.form.submit()">
                    <option value="5" selected="@(Model.PageSize == 5)">5</option>
                    <option value="10" selected="@(Model.PageSize == 10)">10</option>
                    <option value="25" selected="@(Model.PageSize == 25)">25</option>
                </select>

                
    <div class="col-auto">
        <input type="text" name="keyword" value="@Model.Keyword" class="form-control" placeholder="搜尋標題或發布者">
    </div>
    <div class="col-auto">
        <input type="date" name="startDate" value="@Model.StartDate?.ToString("yyyy-MM-dd")" class="form-control">
    </div>
    <div class="col-auto">
        <input type="date" name="endDate" value="@Model.EndDate?.ToString("yyyy-MM-dd")" class="form-control">
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary">搜尋</button>
    </div>
    <div class="col-auto">
        <a href="@Url.Action("Announcements", "Forum")" class="btn btn-secondary">清除</a>
    </div>
    <div class="col-auto text-end">
                    <a href="javascript:void(0);" class="btn btn-success" onclick="openCreateAnnouncementWindow()">
                        <i class="fas fa-plus"></i> 新增公告
                    </a>

</div>
</form>

            <!-- 📄 公告資料表 -->
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>標題</th>
                                    <th>發布者</th>
                                    <th>發布時間</th>
                                    <th>最後修改人員</th>
                                    <th>最後編輯時間</th>
                                    <th>狀態</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Items != null && Model.Items.Any())
                                {
                                    foreach (var ann in Model.Items)
                                    {
                                        <tr>
                                            <td>@ann.Id</td>
                                            <td>@ann.Title</td>
                                            <td>@ann.Supervisor</td>
                                            <td>@ann.PostTime.ToString("yyyy/MM/dd HH:mm")</td>
                                            <td>@ann.LastEditor</td>
                                            <td>@(ann.LastEditTime?.ToString("yyyy/MM/dd HH:mm") ?? "-")</td>
                                            <td><span class="badge bg-secondary">@ann.StatusName</span></td>
                                           
                                            <td>
                                                <a href="#" class="btn btn-sm btn-info" onclick="window.open('@Url.Action("ShowAnnouncement", new { id = ann.Id })', '_blank', 'width=900,height=700'); return false;">查看</a>

                                                <form asp-action="DeleteAnnouncement" method="post" onsubmit="return confirm('確定要刪除這篇公告嗎？');">
                                                    <input type="hidden" name="id" value="@ann.Id" />
                                                    <input type="hidden" name="keyword" value="@Model.Keyword" />
                                                    <input type="hidden" name="startDate" value="@Model.StartDate?.ToString("yyyy-MM-dd")" />
                                                    <input type="hidden" name="endDate" value="@Model.EndDate?.ToString("yyyy-MM-dd")" />
                                                    <input type="hidden" name="page" value="@Model.Page" />
                                                    <input type="hidden" name="pageSize" value="@Model.PageSize" />
                                                    <button type="submit" class="btn btn-danger btn-sm">刪除</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr><td colspan="7">目前沒有符合條件的資料。</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- 📌 分頁列 -->
                    <div class="d-flex justify-content-center">
                        @Html.PagedListPager(Model.Items, page =>
                            Url.Action("Announcements", new {
                                page,
                                pageSize = Model.PageSize,
                                keyword = Model.Keyword,
                                startDate = Model.StartDate?.ToString("yyyy-MM-dd"),
                                endDate = Model.EndDate?.ToString("yyyy-MM-dd")
                            }),
                            new PagedListRenderOptions
                            {
                                UlElementClasses = new[] { "pagination" },
                                LiElementClasses = new[] { "page-item" },
                                PageClasses = new[] { "page-link" },
                                DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                                DisplayLinkToLastPage = PagedListDisplayMode.Always,
                                DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                                DisplayLinkToNextPage = PagedListDisplayMode.Always,
                                MaximumPageNumbersToDisplay = 5
                            })
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function openCreateAnnouncementWindow() {
        const url = '@Url.Action("CreateAnnouncement", "Forum")';
        window.open(url, '_blank', 'width=900,height=800,scrollbars=yes,resizable=yes');
    }
</script>
